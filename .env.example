# .env.example - Copy this file to .env and fill in your values

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# Para desarrollo local
DATABASE_URL="postgresql://username:password@localhost:5432/school_management?schema=public"

# Para Railway deployment - Railway inyecta automáticamente DATABASE_URL
# No necesitas configurarla manualmente en Railway

# ========================================
# CONFIGURACIÓN DE SEGURIDAD (CRÍTICO)
# ========================================
# IMPORTANTE: Cambiar en producción - Usar generador de claves seguras
JWT_SECRET="CAMBIAR_POR_CLAVE_SEGURA_DE_64_CARACTERES_MINIMO_EN_PRODUCCION_2024"
JWT_EXPIRES_IN="24h"

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3000
NODE_ENV="development"  # Cambiar a "production" en Railway

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================
# Para desarrollo
FRONTEND_URL="http://localhost:3000,http://localhost:3001"
# Para producción - Especificar dominio exacto
# FRONTEND_URL="https://tu-dominio.com,https://www.tu-dominio.com"

# ========================================
# CONFIGURACIÓN DE EMAIL (IMPORTANTE PARA RESET DE CONTRASEÑA)
# ========================================
# Proveedor de email: gmail, sendgrid, smtp
EMAIL_PROVIDER="gmail"

# Para Gmail (recomendado para desarrollo)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"  # Usar App Password, no contraseña normal
SMTP_FROM="I.E.D. Villas de San Pablo <noreply@villasanpablo.edu.co>"

# Para SendGrid (recomendado para producción)
# SENDGRID_API_KEY="your-sendgrid-api-key"

# Para SMTP personalizado
# SMTP_HOST="your-smtp-server.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-smtp-user"
# SMTP_PASS="your-smtp-password"

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="./uploads"

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests por ventana en producción

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# ========================================
# CONFIGURACIÓN DE INSTITUCIÓN
# ========================================
INSTITUTION_NAME="Institución Educativa Villas de San Pablo"
INSTITUTION_NIT="123456789-0"
INSTITUTION_ADDRESS="Carrera 123 #45-67, Barranquilla, Colombia"
INSTITUTION_PHONE="+57 5 123 4567"
INSTITUTION_EMAIL="info@villasanpablo.edu.co"
